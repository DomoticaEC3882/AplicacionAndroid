<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvComponente"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginBottom="@dimen/D_margen_top"
    card_view:cardCornerRadius="@dimen/D_corner_radius_cardview"
    android:layout_gravity="center_horizontal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/D_padding_cardview"
        >

        <TextView
            android:id="@+id/tvNombreCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_nombre_cardview"
            android:textSize="@dimen/D_nombre_cardview"
            />

        <ImageView
            android:id="@+id/ivImagenCV"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/componentedefault"
            />
        <TextView
            android:id="@+id/tvEstadoCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_estado_cardview"
            android:textSize="@dimen/D_estado_cardview"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>